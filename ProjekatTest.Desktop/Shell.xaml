<Window x:Class="ProjekatTest.Desktop.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjekatTest.Desktop"
        xmlns:prism="http://www.codeplex.com/prism"
        mc:Ignorable="d"
        Title="ProjekatTest" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="*" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
        <ItemsControl Grid.Row ="0" x:Name="MainRegion" prism:RegionManager.RegionName="MainRegion"  Background="DarkCyan" Width="auto" MinHeight="100" VerticalAlignment="Top"/>
        <ItemsControl Grid.Row ="1" x:Name="DetailRegion" prism:RegionManager.RegionName="DetailRegion"  Background="Aquamarine" Width="auto" />
        <ItemsControl Grid.Row ="2" x:Name="StatusRegion" prism:RegionManager.RegionName="StatuslRegion" Background="DarkSalmon" Width="auto" MinHeight="100" VerticalAlignment="Bottom" />
    </Grid>
</Window>
